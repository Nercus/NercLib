{
    "[lua]": {
        "editor.defaultFormatter": "sumneko.lua"
    },
    "[xml]": {
        "editor.defaultFormatter": "redhat.vscode-xml"
    },
    "editor.formatOnSave": true,
    "editor.indentSize": "tabSize",
    "editor.tabCompletion": "onlySnippets",
    "editor.tabSize": 4,
    "explorer.sortOrder": "default",
    "Lua.completion.autoRequire": false,
    "Lua.diagnostics.disable": [
        "no-unknown",
        "redefined-local"
    ],
    "Lua.diagnostics.groupFileStatus": {
        "ambiguity": "Any",
        "await": "Any",
        "duplicate": "Any",
        "global": "Any",
        "luadoc": "Any",
        "redefined": "Any",
        "strict": "Any",
        "strong": "Any",
        "type-check": "Any",
        "unbalanced": "Any",
        "unused": "Any"
    },
    "Lua.diagnostics.libraryFiles": "Disable",
    "Lua.diagnostics.neededFileStatus": {
        "undefined-field": "Any!"
    },
    "Lua.format.defaultConfig": {
        "indent_size": "4",
        "indent_style": "space"
    },
    "Lua.hint.setType": false,
    "Lua.workspace.ignoreDir": [
        ".github",
        ".vscode",
    ],
    "peacock.color": "#90A8C3",
    "workbench.colorCustomizations": {
        "commandCenter.border": "#15202b99",
        "sash.hoverBorder": "#b1c2d5",
        "statusBar.background": "#90a8c3",
        "statusBar.foreground": "#15202b",
        "statusBarItem.hoverBackground": "#6f8eb1",
        "statusBarItem.remoteBackground": "#90a8c3",
        "statusBarItem.remoteForeground": "#15202b",
        "tab.activeBorder": "#b1c2d5",
        "titleBar.activeBackground": "#90a8c3",
        "titleBar.activeForeground": "#15202b",
        "titleBar.inactiveBackground": "#90a8c399",
        "titleBar.inactiveForeground": "#15202b99"
    },
    "wowAPI.luals.configurationScope": "User",
    "wowAPI.luals.defineKnownGlobals": false,
    "cSpell.words": [
        "BOTTOMLEFT",
        "BOTTOMRIGHT",
        "checkmark",
        "clearbutton",
        "colorpicker",
        "Colorpicker",
        "debugstack",
        "FULLSCREEN",
        "getglobal",
        "magnifyingglass",
        "Nerc",
        "RESETSAVEDVARS",
        "roundhighlight",
        "strsplit",
        "tinsert",
        "TOPLEFT",
        "TOPRIGHT",
        "wordwrap",
        "yxxx"
    ],
    "Lua.diagnostics.globals": [
        "StaticPopupDialogs",
        "StaticPopup_Show",
        "CreateDataProvider",
        "CreateScrollBoxListLinearView",
        "ScrollUtil",
        "UISpecialFrames",
        "MenuConstants"
    ],
}
